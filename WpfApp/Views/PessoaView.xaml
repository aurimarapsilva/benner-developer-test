        </Style>
    </UserControl.Resources>-->

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtros e botões de ação -->
            <RowDefinition Height="*"/>
            <!-- Grid de pessoas -->
            <RowDefinition Height="Auto"/>
            <!-- Detalhes da pessoa selecionada -->
            <RowDefinition Height="*"/>
            <!-- Grid de pedidos -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Seção de Filtros e Ações de Pessoa -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0 0 0 10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Filtros de Pessoas" FontWeight="Bold" Margin="0 0 0 5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nome:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                    <TextBox Grid.Column="1" Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0"/>
                    <TextBlock Grid.Column="2" Text="CPF:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                    <TextBox Grid.Column="3" Text="{Binding FiltroCpf, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">
                    <Button Content="Incluir Pessoa" Command="{Binding AddPessoaCommand}" Margin="0 0 5 0"/>
                    <Button Content="Salvar Pessoa" Command="{Binding SavePessoaCommand}" Margin="0 0 5 0"/>
                    <!--<Button Content="Excluir Pessoa" Command="{Binding DeletePessoaCommand}" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/delete_icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Excluir Pessoa"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>-->
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Grid de Pessoas -->
        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Pessoas}" SelectedItem="{Binding SelectedPessoa}"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto" />
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*" />
                <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="*" />
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Seção de Detalhes da Pessoa Selecionada para Edição -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0 0 0 10">
            <Grid DataContext="{Binding SelectedPessoa}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Id:" Margin="0 0 5 5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="0 0 0 5" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nome:" Margin="0 0 5 5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 5"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="CPF:" Margin="10 0 5 5"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Cpf, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Endereço:" Margin="0 0 5 5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Endereco, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>
        </Border>

        <!-- Seção de Pedidos da Pessoa Selecionada -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Pedidos da Pessoa" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Content="Incluir Novo Pedido" Command="{Binding IncluirPedidoCommand}" Margin="20 0 0 0"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding PedidosPessoa}"
                          IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data da Venda" Binding="{Binding DataVenda, StringFormat='dd/MM/yyyy HH:mm'}" Width="*"/>
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat='C2'}" Width="*"/>
                        <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding FormaPagamento}" Width="*"/>
                        <DataGridTemplateColumn Header="Status" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" Style="{StaticResource StatusTextStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Ações" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Marcar como Pago" Command="{Binding DataContext.MarcarComoPagoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                CommandParameter="{Binding}"
                                                Margin="0 0 5 0"/>
                                        <Button Content="Marcar como Enviado" Command="{Binding DataContext.MarcarComoEnviadoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                CommandParameter="{Binding}"
                                                Margin="0 0 5 0"/>
                                        <Button Content="Marcar como Recebido" Command="{Binding DataContext.MarcarComoRecebidoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
