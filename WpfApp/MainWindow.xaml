<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WpfApp.ViewModels"
        xmlns:Menu="clr-namespace:WpfApp.Utilities"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationViewModel />
    </Window.DataContext>
    
    <Grid>
        <!--// Window Border //-->
        <Border Background="#212529" CornerRadius="20" />

        <Grid>
            <!--// Base Grid //-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228" />
                <ColumnDefinition Width="622" />
            </Grid.ColumnDefinitions>

            <!--// Navigation Panel //-->
            <Grid HorizontalAlignment="Left" Width="228">
                <Border Background="#272B2F" CornerRadius="20,0,0,20" />
                <StackPanel Height="400" Width="228">
                    <!--// Home //-->
                    <Menu:BtnCustom Style="{StaticResource BtnStyle}"
                                    Command="{Binding HomeCommand}"
                                    IsChecked="True">
                        <Grid>
                            <Image Source="Images/home_icon.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Home"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:BtnCustom>
                        
                    <!--// Pessoa //-->
                    <Menu:BtnCustom Style="{StaticResource BtnStyle}"
                                    Command="{Binding PessoaCommand}">
                        <Grid>
                            <Image Source="Images/pessoa_icon.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Pessoa"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:BtnCustom>
                        
                    <!--// Produto //-->
                    <Menu:BtnCustom Style="{StaticResource BtnStyle}"
                                    Command="{Binding ProdutoCommand}">
                        <Grid>
                            <Image Source="Images/produto_icon.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Produto"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:BtnCustom>
                        
                    <!--// Pedido //-->
                    <Menu:BtnCustom Style="{StaticResource BtnStyle}"
                                    Command="{Binding PedidoCommand}">
                        <Grid>
                            <Image Source="Images/pedido_icon.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Pedido"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:BtnCustom>

                    <!--// Encerrar //-->
                    <Menu:BtnCustom Style="{StaticResource BtnStyle}"
                                    Click="CloseApp_Click">
                        <Grid>
                            <Image Source="Images/shutdown_mo.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Encerrar"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:BtnCustom>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <ContentControl x:Name="Pages" 
                                Content="{Binding CurrentView}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
